{
    "opts": {
        "template": "node_modules/clean-jsdoc-theme",
        "destination": "./docs/api/",
        "encoding": "utf8",
        "readme": "./README.md",
        "recurse": true,
        "verbose": true,
        "theme_opts": {
            "default_theme": "dark",
            "sections": ["Modules", "Tutorials"],
            "base_url": "https://Real-John-Cheung.github.io/colorGenJS/api/colorgen-js/1.0.0/",
            "homepageTitle": "Color Gen",
            "menu": [{
                "title": "Github",
                "link": "https://github.com/Real-John-Cheung/colorGenJS",
                "target": "_blank",
                "class": "",
                "id": ""
            },{
                "title": "JohnC",
                "link": "https://johncheung.art",
                "target": "_blank",
                "class": "",
                "id": ""
            }]
        },
        "codepen": {
            "enable_for": ["examples"]
        }
    },
    "templates": {
        "default": {
            "outputSourceFiles": false
        }
    },

    "plugins": ["plugins/markdown"],

    "source": {
        "include": ["./src", "package.json"],
        "includePattern": ".js$"
    },

    "markdown": {
        "hardwrap": false,
        "idInHeadings": true
    }

}